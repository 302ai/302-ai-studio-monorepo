{
  "name": "@302-ai-studio/electron-app",
  "version": "0.1.0",
  "description": "302 AI Studio Electron Application",
  "main": "./out/main/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:win": "pnpm build && electron-builder --win",
    "build:mac": "pnpm build && electron-builder --mac",
    "build:linux": "pnpm build && electron-builder --linux",
    "clean": "rm -rf dist out",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Linting not configured yet'"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.39.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@types/node": "^24.3.3",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "svelte": "^5.38.10",
    "svelte-check": "^4.3.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "dependencies": {
    "@302-ai-studio/shared": "workspace:*",
    "@302-ai-studio/ui": "workspace:*"
  },
  "build": {
    "appId": "com.302ai.studio",
    "productName": "302 AI Studio",
    "directories": {
      "output": "dist/build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icon.png"
    }
  }
}