{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@302-ai-studio/shared": ["packages/shared/src"],
      "@302-ai-studio/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "app/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build",
    "**/.svelte-kit"
  ]
}